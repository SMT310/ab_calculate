<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="68dp"
            android:background="@color/white"
            android:text="Input A"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/b"
            app:layout_constraintEnd_toStartOf="@+id/numa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.49" />

        <EditText
            android:id="@+id/numb"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="46dp"
            android:layout_marginBottom="12dp"
            android:ems="10"
            android:inputType="number"
            android:background="@color/teal_200"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/addbtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/b"
            app:layout_constraintTop_toBottomOf="@+id/numa"
            app:layout_constraintVertical_bias="0.038" />

        <EditText
            android:id="@+id/numa"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="48dp"
            android:ems="10"
            android:inputType="number"
            android:background="@color/teal_200"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/a"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="300dp"
            android:text="A + B"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/numab"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b"
            app:layout_constraintVertical_bias="0.983" />

        <TextView
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="68dp"
            android:text="Input B"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/numb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/a" />

        <EditText
            android:id="@+id/numab"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="66dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="46dp"
            android:layout_marginBottom="300dp"
            android:ems="10"
            android:inputType="number"
            android:background="@color/teal_200"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ab"
            app:layout_constraintTop_toBottomOf="@+id/addbtn"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/addbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="134dp"
            android:layout_marginEnd="134dp"
            android:text="Calculate A + B"
            app:layout_constraintBottom_toTopOf="@+id/ab"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b"
            app:layout_constraintVertical_bias="0.47" />

</androidx.constraintlayout.widget.ConstraintLayout>